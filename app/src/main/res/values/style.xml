<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NMock.BottomSheetDialogFragment.Behavior" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
    </style>

    <style name="NMock.MaterialButton.Style.FillButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_on_primary</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:clipToOutline" tools:targetApi="s">false</item>
    </style>

    <style name="NMock.MaterialButton.Style.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_on_primary</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipToOutline" tools:targetApi="s">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="NMock.MaterialFloatingActionButton.Style.FillFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/color_on_primary</item>
        <item name="tint">@color/color_primary</item>
        <item name="elevation">4dp</item>
        <item name="fabSize">normal</item>
    </style>

</resources>